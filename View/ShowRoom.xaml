<UserControl x:Class="TPUM.Presentation.View.ShowRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPUM.Presentation.View"
             xmlns:ctrls="clr-namespace:TPUM.Presentation.View.Controls"
             xmlns:vm="clr-namespace:TPUM.Presentation.ViewModel;assembly=Presentation.ViewModel"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1270">
    <UserControl.DataContext>
        <vm:ShowRoomViewModel x:Name="ViewModel"/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pasek u góry -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Back" Margin="5,5,118,0" Command="{Binding BackCommand}"
                    CommandParameter="{x:Type local:RoomsList}"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Center">
                <Run Text="Name: "/>
                <Run Text="{Binding RoomName, Mode=OneWay}"/>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Heaters -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Heaters"/>
                <ListView ItemsSource="{Binding Heaters, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Height="580" Margin="0, 5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ctrls:HeaterInfo 
                                HeaterId="{Binding Id}"
                                Position="{Binding Position}"
                                IsOn="{Binding IsOn}"
                                Temperature="{Binding Temperature}"
                                TurnCommand="{Binding TurnHeaterCommand, ElementName=ViewModel}"
                                MoveCommand="{Binding MoveHeaterCommand, ElementName=ViewModel}"
                                RemoveCommand="{Binding RemoveHeaterCommand, ElementName=ViewModel}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Content="Add Heater" Command="{Binding AddHeaterCommand}" CommandParameter="{x:Type local:CreateHeaterWindow}"/>
            </StackPanel>

            <!-- Room -->
            <StackPanel Grid.Column="1">
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Width: "/>
                    <Run Text="{Binding RoomWidth, Mode=OneWay}"/>
                    <Run Text="m Height: "/>
                    <Run Text="{Binding RoomHeight, Mode=OneWay}"/>
                    <Run Text="m"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Avg Temperature: "/>
                    <Run Text="{Binding RoomTemp, Mode=OneWay}"/>
                    <Run Text="°C"/>
                </TextBlock>
            </StackPanel>

            <!-- Sensors -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Sensors"/>
                <ListView ItemsSource="{Binding HeatSensors, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Height="580" Margin="0, 5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ctrls:HeatSensorInfo 
                                HeatSensorId="{Binding Id}"
                                Position="{Binding Position}"
                                Temperature="{Binding Temperature}"
                                MoveCommand="{Binding MoveHeatSensorCommand, ElementName=ViewModel}"
                                RemoveCommand="{Binding RemoveHeatSensorCommand, ElementName=ViewModel}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Content="Add Sensor" Command="{Binding AddHeatSensorCommand}" CommandParameter="{x:Type local:CreateHeatSensorWindow}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
